# Environment variables for MòjDom API

# Application
DEBUG=False
APP_NAME="MòjDom API"
API_PORT=8081

# API Database connection
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Public API token
PUBLIC_TOKEN=your-public-token-here

# External Listings API
EXTERNAL_LISTINGS_URL=http://external_listing_url:port
EXTERNAL_LISTINGS_ENDPOINT=/api/v1/listings/cursor
EXTERNAL_LISTINGS_TIMEOUT=30

# Database settings
POSTGRES_DB=db_name
POSTGRES_USER=user
POSTGRES_PASSWORD=passwd